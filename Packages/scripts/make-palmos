#! /bin/sh

destination=$workingcopy"/Packages/complete/ccprobe-palmos"
download=$workingcopy"/Packages/download/ccprobe-palmos"
bin=$workingcopy"/CCProbe/bin"
components=$workingcopy"/Packages/components/ccprobe-palmos"
doc=$workingcopy"/Packages/doc"
labbook=$workingcopy"/TeemssXML/LabBookXSL"

rm -f $destination/*
rm -f $download/*

cp $bin/CCProbe.prc  $destination
cp $doc/ccprobe-palmos/* $destination
cp $doc/all/* $destination
cp $labbook/LabBook.PDB $destination

# cp $components/* $destination

echo $destination
ls -l $destination

osascript make-palmos.applescript

cd $destination/../
tar -czvf $download/CCProbe.tgz ccprobe-palmos

rm -f $download/CCProbe.sea

echo $download
ls -l $download



