#! /bin/sh
# make-palmos

source packaging-functions.sh

complete=$complete/ccprobe-palmos
download=$download/ccprobe-palmos
components=$components/ccprobe-palmos

rm -f $complete/*
rm -f $download/*
rm -rf $tempdir/*

copy-cvs-folder $doc/ccprobe-palmos $complete
copy-cvs-folder $doc/all $complete

cp $bin/CCProbe.prc $complete
cp $labbook/LabBook.PDB $complete
cp $components/* $complete

echo $complete
ls -l $complete

osascript make-palmos-windows.applescript

cd $complete/../

windows-to-unix-newline $doc/ccprobe-palmos/readme-palmos.txt $complete/readme-palmos.txt
windows-to-unix-newline $doc/all/COPYING $complete/COPYING

tar -czf $download/CCProbe.tgz ccprobe-palmos

cd -

windows-to-macos-newline $doc/ccprobe-palmos/readme-palmos.txt $tempdir/readme-palmos.txt
windows-to-macos-newline $doc/all/COPYING $tempdir/COPYING
SetFile -c ttxt -t TEXT $tempdir/*

cp $doc/all/ccprobe-ref.pdf $tempdir
SetFile -c 'CARO' -t 'PDF ' $tempdir/ccprobe-ref.pdf
CpMac $tempdir/* $complete

osascript make-palmos-macos.applescript

rm -f $download/CCProbe.sea

echo $download
ls -l $download



