#! /bin/sh

destination=$workingcopy"/Packages/complete/ccprobe-unix"
download=$workingcopy"/Packages/download/ccprobe-unix"
bin=$workingcopy"/CCProbe/bin"
components=$workingcopy"/Packages/components/ccprobe-unix"
doc=$workingcopy"/Packages/doc"
labbook=$workingcopy"/TeemssXML/LabBookXSL"

rm -rf $destination/*
rm -rf $download/*

cp $bin/CCProbe.wrp  $destination
cp $bin/CCProbe.lnk  $destination
cp $doc/ccprobe-unix/* $destination
cp $doc/all/* $destination
cp $labbook/LabBook.PDB $destination
cp -r $components/* $destination

echo $destination
ls -l $destination

cd $destination/../

tar -czvf $download/CCProbe.tgz ccprobe-unix

echo $download
ls -l $download





