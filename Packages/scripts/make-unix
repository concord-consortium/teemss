#! /bin/sh

destination="/Users/stephen/cvsroot/releases/complete/ccprobe-unix"
download="/Users/stephen/cvsroot/releases/download/ccprobe-unix"
bin="/Users/stephen/cvsroot/CCProbe/bin"
components="/Users/stephen/cvsroot/releases/components/ccprobe-unix"
doc="/Users/stephen/cvsroot/releases/doc"
labbook="/Users/stephen/cvsroot/Xml/LabBookXSL"

rm -rf $destination/*
rm -rf $download/*

cp $bin/CCProbe.wrp  $destination
cp $bin/CCProbe.lnk  $destination
cp $doc/ccprobe-unix/* $destination
cp $doc/all/* $destination
cp $labbook/LabBook.PDB $destination
cp -r $components/* $destination

echo $destination
ls -l $destination

cd $destination/../

tar -czvf $download/CCProbe.tgz ccprobe-unix

echo $download
ls -l $download





