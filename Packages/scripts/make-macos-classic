#! /bin/sh

destination=$workingcopy"/Packages/complete/ccprobe-macos-classic"
download=$workingcopy"/Packages/download/ccprobe-macos-classic"
bin=$workingcopy"/CCProbe/bin"
components=$workingcopy"/Packages/components/ccprobe-macos-classic"
doc=$workingcopy"/Packages/doc"
tempdir=$workingcopy"/Packages/tempdir"
labbook=$workingcopy"/TeemssXML/LabBookXSL"

rm -rf $destination/*
rm -rf $download/*
rm -rf $tempdir/*

cp $bin/CCProbe.jar  $destination
CpMac $doc/ccprobe-macos-classic/* $tempdir
CpMac $doc/all/* $tempdir
SetFile -c ttxt -t TEXT $tempdir/*
SetFile -c 'CARO' -t 'PDF ' $tempdir/ccprobe-ref.pdf
CpMac $tempdir/* $destination
cp $labbook/LabBook.PDB $destination
CpMac $components/CCProbe $components/CCProbe.properties $destination
SetFile -c ttxt -t TEXT $destination/CCProbe.properties

echo $destination
ls -l $destination

osascript make-macos-classic.applescript

rm -f $download/CCProbe.sea

echo $download
ls -l $download
