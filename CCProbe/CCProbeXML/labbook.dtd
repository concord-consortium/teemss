<?xml encoding="UTF-8"?>
<!ENTITY % SNOBJECTS "FOLDER | NOTES | DATACOLLECTOR | DRAWING | UNITCONV | IMAGE | EXPOBJECT">
<!ENTITY % CCOBJECTS "%SNOBJECTS; | SUPERNOTES">
<!ENTITY % boolean "(true | false)">
<!ENTITY % probes "(Temperature | Light | SmartWheel | RawData | Force | VoltageCurrent)">


<!ELEMENT LABBOOK (%CCOBJECTS;)*>
<!ATTLIST LABBOOK
	view		(paging | tree)		"tree"
>

<!ELEMENT FOLDER (%CCOBJECTS;)*>
<!ATTLIST FOLDER
	ID			ID					#REQUIRED
	name		CDATA				#IMPLIED
	view		(paging | tree)		"tree"
	url			CDATA				#IMPLIED
>
<!ELEMENT NOTES (#PCDATA)>
<!ATTLIST NOTES
	ID			ID			#REQUIRED
	name		CDATA		#IMPLIED
	indent   	CDATA 		#IMPLIED
>

<!ELEMENT DRAWING EMPTY>
<!ATTLIST DRAWING
	ID			ID			#REQUIRED
	name		CDATA		#IMPLIED
>

<!ELEMENT UNITCONV EMPTY>
<!ATTLIST UNITCONV
	ID			ID			#REQUIRED
	name		CDATA		#IMPLIED
>

<!ELEMENT IMAGE EMPTY>
<!ATTLIST IMAGE
	ID			ID			#REQUIRED
	name		CDATA		#IMPLIED
	url			CDATA		#IMPLIED
>

<!-- SuperNotes related declarations -->
<!ELEMENT SUPERNOTES (SNPARAGRAPH | EMBOBJ)*>
<!ELEMENT EMBOBJ (%SNOBJECTS;)?>
<!ATTLIST EMBOBJ
	object 			IDREF 			#IMPLIED
	w   			CDATA			#IMPLIED
	h   			CDATA			#IMPLIED
	alignment		(left | right) 	"left"
	wrapping   		%boolean; 		"false"
	link	   		%boolean; 		"false"
	linkcolor		CDATA			"0000FF"
>
<!ELEMENT SNPARAGRAPH (#PCDATA)>
<!ATTLIST SUPERNOTES
	ID			ID			#REQUIRED
	name		CDATA		#IMPLIED
>
<!ATTLIST SNPARAGRAPH
	link   		%boolean; 	"false"
	linkcolor  	CDATA 		"000000"
	object 		IDREF 		#IMPLIED
	indent   	CDATA 		#IMPLIED
>

<!ELEMENT EXPOBJECT EMPTY>
<!ATTLIST EXPOBJECT
	ID			ID			#REQUIRED
	url 		CDATA 		#REQUIRED
>

<!ELEMENT XAXIS EMPTY>
<!ATTLIST XAXIS
    min        CDATA        #IMPLIED
    max        CDATA        #IMPLIED
> 
<!ELEMENT YAXIS EMPTY>
<!ATTLIST YAXIS
    min        CDATA        #IMPLIED
    max        CDATA        #IMPLIED
> 

<!ELEMENT PROP EMPTY>
<!ATTLIST PROP 
   name       CDATA        #REQUIRED
    value      CDATA        #REQUIRED
>

<!ELEMENT PROBE (PROP)*>
<!ATTLIST PROBE
    ID         ID            #IMPLIED
    probe      %probes;      "Temperature"
    interface  (0 | 2)       "2"
>

<!ELEMENT INTPROBETRANS (PROBE)?>
<!ATTLIST INTPROBETRANS
    ID         ID            #IMPLIED
    quantity   CDATA         #REQUIRED
    probe      IDREF         #IMPLIED
>

<!ELEMENT LINE (PROBE | INTPROBETRANS | EXPOBJECT | OBJ-REF)?>
<!ATTLIST LINE
    xaxis      CDATA        #REQUIRED
    yaxis      CDATA        #REQUIRED
    datasource IDREF        #IMPLIED
>

<!ELEMENT GRAPH (XAXIS | YAXIS | LINE)*>
<!ATTLIST GRAPH
    current-line   CDATA    #IMPLIED
    title          CDATA    #IMPLIED
>

<!ELEMENT DATACOLLECTOR ((PROBE | INTPROBETRANS | EXPOBJECT | OBJ-REF)*,GRAPH)>
<!ATTLIST DATACOLLECTOR
	ID			ID			#IMPLIED
	name		CDATA		#IMPLIED
>

<!ELEMENT OBJ-REF EMPTY>
<!ATTLIST OBJ-REF
    ref         IDREF      #REQUIRED
>


